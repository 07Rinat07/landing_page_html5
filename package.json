{
  "name": "landing_page_html5",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Современный лендинг с API-формой, тестами и Docker-рантаймом",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "concurrently -k -n FRONT,API -c green,cyan \"vite\" \"node --watch server/index.js\"",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.js",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:format",
    "lint:js": "eslint .",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:format": "prettier --check .",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:e2e && npm run test:a11y",
    "test:unit": "vitest run",
    "test:e2e": "playwright test tests/e2e/form.spec.js tests/e2e/navigation.spec.js",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.js",
    "test:lighthouse": "node scripts/run-lhci.mjs"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.93.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
